<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_default"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50.1dp"
            android:fontFamily="sans-serif-medium"
            android:text="Valor em reais"
            android:textColor="@color/text_gray"
            android:textSize="17.1sp" />

        <EditText
            android:id="@+id/payment_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="50dp"
            android:hint="Informe o valor em reais"
            android:inputType="number"
            android:textColorHint="@color/light_gray"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="50.1dp"
                android:fontFamily="sans-serif-medium"
                android:text="Dados do cartão"
                android:textColor="@color/text_gray"
                android:textSize="17.1sp" />

            <View
                android:id="@+id/payment_card_photo_container"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="47dp"
                android:src="@drawable/camera" />

            <ImageView
                android:id="@+id/payment_card_photo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="52dp"
                android:src="@drawable/camera" />
        </RelativeLayout>

        <EditText
            android:id="@+id/payment_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="50dp"
            android:hint="Número do cartão"
            android:inputType="number"
            android:textColorHint="@color/light_gray"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/payment_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="Nome do titular do cartão"
            android:inputType="text"
            android:maxLines="1"
            android:textColorHint="@color/light_gray"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/payment_card_date"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:hint="Data de vencimento"
            android:inputType="number"
            android:textAlignment="center"
            android:textColorHint="@color/light_gray"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp">

            <EditText
                android:id="@+id/payment_card_security_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="CVV"
                android:inputType="number"
                android:maxLength="3"
                android:textAlignment="center"
                android:textColorHint="@color/light_gray"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:src="@drawable/card"
                android:tint="#d5d5d5" />

        </RelativeLayout>

        <CheckBox
            android:id="@+id/payment_card_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:fontFamily="sans-serif-light"
            android:text="Pagar com esse cartão"
            android:textColor="@color/text_gray"
            android:textSize="14.1sp"
            android:visibility="gone" />

    </LinearLayout>

    <Button
        android:id="@+id/payment_card_pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="17.1dp"
        android:background="@drawable/rounded_button_blue"
        android:fontFamily="sans-serif-light"
        android:text="Efeturar Pagamento"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="17.1sp" />


</RelativeLayout>